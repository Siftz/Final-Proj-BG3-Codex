@model ClassBuildDetail
@{
    ViewData["Title"] = $"{Model.ClassName} Build";
}

<h2>@Model.ClassName Build</h2>
<p><strong>Playstyle:</strong> @Model.Playstyle</p>

<h3>Ability Progression</h3>
<ul>
    @foreach (var ability in Model.AbilityProgression)
    {
        <li>@ability</li>
    }
</ul>

<h3>Item Acquisition Path</h3>
<ul>
    @foreach (var item in Model.ItemPath)
    {
        <li>@item.Name â€” found in @item.Location</li>
    }
</ul>

<h3>Final Loadout</h3>
<ul>
    @foreach (var slot in Model.FinalLoadout)
    {
        <li>@slot.SlotName: @slot.ItemName</li>
    }
</ul>